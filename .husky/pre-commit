

# Store the list of staged files before formatting
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

pnpm format:write

# Check if formatting succeeded
if [ $? -eq 0 ]; then
  # Re-add all files that were originally staged and might have been modified by prettier
  # This ensures the prettified versions are added to the commit
  git add $STAGED_FILES

  pnpm typecheck
  if [ $? -ne 0 ]; then
    echo "Typecheck failed. Aborting commit."
    exit 1
  fi
else
  echo "Prettier formatting failed. Aborting commit."
  exit 1
fi 